#!/usr/bin/env bash

function all_auth() (
	source "$DOROTHY/sources/bash.bash"

	# trim
	if test "${1-}" = '--'; then
		shift
	fi

	# if the secrets aren't provided, fetch them and reload
	if test -z "${GITHUB_ACCESS_TOKEN-}"; then
		__print_line 'Environment variables empty, fetching them from the secret engine...' >/dev/tty
		secret env NPM_AUTHTOKEN SURGE_LOGIN SURGE_TOKEN GITHUB_ACCESS_TOKEN GITHUB_CLIENT_ID GITHUB_CLIENT_SECRET -- "$@"
		return
	else
		"$@"
		return
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	all_auth "$@"
fi
